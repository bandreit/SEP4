<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="15dp">

    <TextView
        android:id="@+id/themeModeText"
        android:text="@string/title_theme"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ThemeModeToggle"
        android:layout_below="@+id/themeModeText"
        android:text="@string/title_disabled"
        android:layout_marginTop="3dp"
        android:textSize="14sp"
        android:textColor="#90939A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        app:thumbTint="@drawable/new_thumb"
        app:trackTint="@drawable/new_track"
        android:id="@+id/themeModeSwitch"
        android:enabled="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        android:layout_alignParentEnd="true" />


</RelativeLayout>